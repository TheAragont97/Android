<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutPersonalizada"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".PersonalizadaActivity">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="316dp"
        android:layout_height="163dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toTopOf="@+id/chipGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tamaño"
            android:textAlignment="center" />

        <RadioButton
            android:id="@+id/grande"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grande" />

        <RadioButton
            android:id="@+id/mediana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mediana" />

        <RadioButton
            android:id="@+id/pequeña"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pequeña" />
    </RadioGroup>

    <Button
        android:id="@+id/confirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="5dp"
        android:text="Pedir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/chipGroup"
        app:layout_constraintTop_toBottomOf="@+id/chipGroup" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="324dp"
        android:layout_height="353dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/confirmar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ingredientes"
                android:textAlignment="center" />

            <com.google.android.material.chip.Chip
                android:id="@+id/ingrediente_queso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="queso"
                android:textAlignment="center" />

            <com.google.android.material.chip.Chip
                android:id="@+id/ingrediente_tomate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tomate"
                android:textAlignment="center" />

            <com.google.android.material.chip.Chip
                android:id="@+id/ingrediente_atun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="atún"
                android:textAlignment="center" />

            <com.google.android.material.chip.Chip
                android:id="@+id/ingrediente_cebolla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="cebolla"
                android:textAlignment="center" />

            <com.google.android.material.chip.Chip
                android:id="@+id/ingrediente_pimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="pimiento"
                android:textAlignment="center" />

            <com.google.android.material.chip.Chip
                android:id="@+id/ingrediente_jamon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="jamon"
                android:textAlignment="center" />

            <com.google.android.material.chip.Chip
                android:id="@+id/ingrediente_salsabbq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="salsa bbq"
                android:textAlignment="center" />

        </LinearLayout>
    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>