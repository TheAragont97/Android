<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/IA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/ganador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="@+id/IA"
        app:layout_constraintTop_toBottomOf="@+id/IA" />

    <TextView
        android:id="@+id/nuestraEleccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        app:layout_constraintStart_toStartOf="@+id/ganador"
        app:layout_constraintTop_toBottomOf="@+id/ganador" />

    <Button
        android:id="@+id/tijeras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tijeras"
        app:layout_constraintBaseline_toBaselineOf="@+id/papel"
        app:layout_constraintEnd_toEndOf="@+id/reset"
        app:layout_constraintStart_toEndOf="@+id/reset" />

    <Button
        android:id="@+id/reset"
        android:layout_width="224dp"
        android:layout_height="56dp"
        android:layout_marginBottom="212dp"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/piedra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:text="Piedra"
        app:layout_constraintBaseline_toBaselineOf="@+id/papel"
        app:layout_constraintEnd_toStartOf="@+id/papel" />

    <Button
        android:id="@+id/papel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="31dp"
        android:text="Papel"
        app:layout_constraintBottom_toTopOf="@+id/reset"
        app:layout_constraintEnd_toStartOf="@+id/tijeras" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Piedra-Papel-Tijeras"
        android:textColor="@color/purple_700"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/IA"
        app:layout_constraintStart_toStartOf="@+id/IA"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>